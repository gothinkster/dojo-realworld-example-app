{
  "name": "dojo-realworld",
  "version": "1.0.0",
  "scripts": {
    "precommit": "lint-staged",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx,md,css}\"",
    "test": "dojo build -m test && dojo test",
    "build": "dojo build",
    "dev": "dojo build -m dev -w -s"
  },
  "dependencies": {
    "@dojo/framework": "next",
    "snarkdown": "^1.2.2",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@dojo/cli": "next",
    "@dojo/cli-build-app": "next",
    "@dojo/cli-test-intern": "next",
    "@types/sinon": "^1.16.35",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "sinon": "^2.0.0",
    "typescript": "~3.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
